generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DailyLog {
  id            String      @id @default(uuid())
  logDate       DateTime
  question      Question    @relation(fields: [questionId], references: [id])
  questionId    String
  title         String
  content       String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Question {
  id            String      @id @default(uuid())
  text          String
  dailyLogs     DailyLog[]
  createdAt     DateTime    @default(now())
}